<div class="m-3">
  <div class="container max-w-4xl m-auto">
    <div class="md:flex justify-between items-center">
      <div>
        <h1 class="text-xl font-bold text-gray-500"><a href="<%= stafftools_url %>">Stafftools</a></h1>
        <h2 class="text-4xl font-bold mb-4">Meetup areas</h2>
      </div>

      <a href="<%= new_stafftools_meetup_area_path %>"
        class="p-3 rounded-2xl bg-pink-500 text-white hover:bg-pink-600 transition duration-200">
        Add a meetup area
      </a>
    </div>

    <div class="inline-block min-w-full my-4">
      <div class="overflow-hidden shadow ring-1 ring-black/5 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Name</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Location</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Description</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <% if meetup_areas.any? %>
              <% meetup_areas.each do |meetup_area| %>
                <tr>
                  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= meetup_area.name %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= meetup_area.location %></td>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= meetup_area.description %></td>
                  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                    <a href="<%= edit_stafftools_meetup_area_path(meetup_area) %>" class="text-purple-500 hover:text-purple-600">Edit</a>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="3" class="whitespace-nowrap py-4 px-3 text-sm text-gray-500 text-center">No meetup areas yet.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

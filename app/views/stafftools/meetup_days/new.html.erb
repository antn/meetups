<div class="m-3">
  <div class="container max-w-4xl m-auto">
    <div class="md:flex justify-between items-center">
      <div>
        <h1 class="text-xl font-bold text-gray-500"><a href="<%= stafftools_url %>">Stafftools</a></h1>
        <h2 class="text-4xl font-bold mb-4">Create a meetup day</h2>
      </div>

      <a href="<%= stafftools_meetup_days_path %>" class="bg-gray-200 text-sm rounded-2xl py-3 px-5 flex items-center justify-center text-center hover:bg-gray-300">
        <%= heroicon("arrow-left", class: "mr-2", variant: :mini) %> Back to meetup days
      </a>
    </div>

    <div class="my-4">
      <%= form_with model: meetup_day, url: stafftools_meetup_days_path, method: :post do |form| %>
        <div class="mb-4">
          <%= form.label :starts_at, "Starts at", class: "block text-gray-700 font-bold mb-2" %>
          <%= form.datetime_field :starts_at,
                                  value: meetup_day.starts_at&.in_time_zone("Pacific Time (US & Canada)")&.strftime("%Y-%m-%dT%H:%M"),
                                  step: 3600,
                                  class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500" %>
        </div>

        <div class="mb-4">
          <%= form.label :ends_at, "Ends at", class: "block text-gray-700 font-bold mb-2" %>
          <%= form.datetime_field :ends_at,
                                  value: meetup_day.ends_at&.in_time_zone("Pacific Time (US & Canada)")&.strftime("%Y-%m-%dT%H:%M"),
                                  step: 3600,
                                  class: "w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-pink-500 focus:border-pink-500" %>
        </div>

        <div class="flex justify-end">
          <%= form.submit "Create meetup day", class: "bg-pink-500 text-white py-2 px-4 rounded-lg hover:bg-pink-600 transition duration-200" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
